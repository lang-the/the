<!DOCTYPE html>
<html lang="{{ page.lang | default: site.lang | default: "en" }}">
  {% include head.liquid %}
  <body>
    {% if jekyll.environment == "production" %}
      <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-W9FVJG2" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    {% endif %}
    {% include banner.liquid %}
    <div class="page-layout">
      {% include sidebar.liquid %}
      <div class="page-layout__body">
        {% include header.liquid brand="mobile" %}
        <div class="page-layout__content">
          {{ content }}
        </div>
      </div>
    </div>
    {% include footer.liquid %}
    {% include search-modal.liquid %}
    <script src="{{ "/assets/js/header.js" | relative_url }}"></script>
    <script src="{{ "/assets/js/pagination-navigation.js" | relative_url }}"></script>
    <script src="{{ "/assets/js/parser.js" | relative_url }}"></script>
    <script src="{{ "/assets/js/search.js" | relative_url }}"></script>
    <script src="{{ "/assets/js/sidebar.js" | relative_url }}"></script>
    <script src="{{ "/assets/js/table-of-contents.js" | relative_url }}"></script>
  </body>
</html>
